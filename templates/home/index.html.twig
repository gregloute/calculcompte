{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

    
	<div class="row">
		<div class="col s12 center-align">
            <h2>Bienvenue sur CalculCompte</h2>
            <p>L'application qui vous aide a calculer vos comptes.</p>
        </div>
    </div>
	{% if not app.user %}
	<div class="row">
		<div class="col s12 m6">
            <h3>Connexion</h3>
			<div class="row">
				<form action="{{ path('connexion') }}" method="post" class="col s12">
					<div class="row">
						<div class="input-field col s12">
							<input id="username" type="text" name="_username" required class="validate">
							<label for="username">Login</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="password" type="password" name="_password" class="validate">
							<label for="password">Mot de passe</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<button class="btn waves-effect waves-light indigo" type="submit" name="action">Connexion</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="col s12 m6">
            <h3>Creer un compte</h3>
			<div class="row">
				{{ form_start(form,  {'action': path('inscription')}) }}
				{{ form_widget(form) }}
				<button class="btn waves-effect waves-light indigo" type="submit" name="action">Submit
					<i class="material-icons right">send</i>
				</button>
				{{ form_end(form) }}
			</div>
        </div>
	</div>
	{% endif %}
{% endblock %}
