{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

    
	<div class="row">
		<div class="col s12 center-align">
            <h2>Bienvenue sur CalculeCompte</h2>
            <p>L'application qui vous aide a calculer vos comptes.</p>
        </div>
    </div>
	
	<div class="row">
		<div class="col s12 m6">
            <h3>Connexion</h3>
			<div class="row">
				<form class="col s12">
					<div class="row">
						<div class="input-field col s12">
							<input id="email" type="email" class="validate">
							<label for="email">Email</label>
						</div>
					</div>
                    <div class="row">
						<div class="input-field col s12">
							<input id="password" type="password" class="validate">
							<label for="password">Password</label>
						</div>
					</div>
                    <div class="row">
                        <div class="col s12">
                            <label>
                                <input type="checkbox" />
                                <span>Remember me</span>
                            </label>
                        </div>
                    </div>
					<div class="row">
						<div class="col s12">
							<button class="btn waves-effect waves-light" type="submit" name="action">Connexion</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="col s12 m6">
            <h3>Creer un compte</h3>
			<div class="row">
				<form class="col s12">
					<div class="row">
						<div class="input-field col s12">
							<input id="email" type="email" class="validate">
							<label for="email">Email</label>
						</div>
					</div>
                    <div class="row">
						<div class="input-field col s12">
							<input id="password" type="password" class="validate">
							<label for="password">Password</label>
						</div>
					</div>
                    <div class="row">
						<div class="input-field col s12">
							<input id="password" type="password" class="validate">
							<label for="password">Password</label>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<button class="btn waves-effect waves-light" type="submit" name="action">Creer</button>
						</div>
					</div>
				</form>
			</div>
        </div>
	</div>
{% endblock %}
