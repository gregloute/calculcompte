{% extends 'base.html.twig' %}

{% block title %}Hello MoisController!{% endblock %}

{% block body %}
    <div class="row  valign-wrapper">
		<div class="col s12 center-align">
            <h3>Tous les mois</h3>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="card-panel blue-grey darken-1">
                <div class="white-text center-align">
                    <a class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Mois</a>
                </div>
            </div>
        </div>

        <div class="col s12">
            <ul class="collection">
                {% for mois in moiss %}
                <li class="collection-item avatar">
                    <span class="title">{{ mois.nom }}</span>
                    <p>{{ mois.solde |format_currency('EUR')}}<br>
                        derni√®re modification : {{ mois.updatedAt | date("d/m/Y") }}
                    </p>
                    <a class="btn-floating btn-small waves-effect waves-light red secondary-content" href="{{ path('mois#show', {'id' : mois.id }) }}"><i class="material-icons">edit</i></a>
                    <a class="btn-floating btn-small waves-effect waves-light red tertiary-content" href="#{{ mois.id }}"><i class="material-icons">delete</i></a>
                </li>
                {%  endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
