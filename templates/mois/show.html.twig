{% extends 'base.html.twig' %}

{% block title %}Hello MoisController!{% endblock %}

{% block body %}
    <div class="row  valign-wrapper">
		<div class="col s12 center-align">
            <h3>{{mois.nom}}</h3>
        </div>
    </div>

    <div class="row">
		<div class="col s6">
            <div class="card-panel blue-grey darken-1">
                <div class="white-text center-align">
                    <h5>Solde fin du mois</h5>
                    <p>{{ mois.solde |format_currency('EUR')}}</p>
                </div>
            </div>
		</div>
		<div class="col s6">
            <div class="card-panel blue-grey darken-1">
                <div class="white-text center-align">
                    <h5>Solde sur le compte</h5>
                    <p>{{mois.soldesurcompte |format_currency('EUR')}}</p>
                </div>
            </div>
        </div>

        <div class="col s12">
            <div class="card-panel blue-grey darken-1">
                <div class="white-text center-align">
                    <div class="row">
                        <div class="col s12">
                            <p class="left">Nombre de dépense à venir: {{mois.nombredepenseavenir}}</p>
                        </div>
                        <div class="col s12">
                            <p class="left">Dépense total: {{mois.depensetotal |format_currency('EUR')}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12">
            <div class="card-panel blue-grey darken-1">
                <div class="white-text center-align">
                    <a class="waves-effect waves-light btn red"><i class="material-icons left">add</i>Dépense</a>
                    <a class="waves-effect waves-light btn green"><i class="material-icons left">add</i>Revenue</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <ul class="collection">
                {% for transaction in mois.transactions %}
                <li class="collection-item avatar {% if transaction.depense %}red-text{% else %}green-text{% endif %}">
                    <span class="title">{{ transaction.nom }}</span>
                    <p>{{ transaction.valeur |format_currency('EUR')}}<br>
                        Sur Compte: <i class="material-icons" style="vertical-align: top;">{% if transaction.surcompte %}check{% else %}close{% endif %}</i>
                    </p>
                    <a class="btn-floating btn-small waves-effect waves-light red secondary-content" href="{{ path('mois#editTransaction', {'id' : transaction.id})}}"><i class="material-icons">edit</i></a>
                    <a class="btn-floating btn-small waves-effect waves-light red tertiary-content" href="#{{ transaction.id }}"><i class="material-icons">delete</i></a>
                </li>
                {%  endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
