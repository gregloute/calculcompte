{% extends 'base.html.twig' %}

{% block title %}Modification d'une transaction{% endblock %}

{% block body %}
    <div class="row  valign-wrapper">
        <div class="col s12 center-align">
            <h3>{{transaction.nom}}</h3>
        </div>
    </div>

    <div class="row">
        {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.valeur) }}

        <div class="row">
            {{ form_label(form.depense) }}
        </div>
        <div class="row">
            {{ form_label(form.surcompte) }}
        </div>

        {{ form_row(form._token) }}

        <input type="hidden" name="_holdValue" value="{{ transaction.valeur }}">
        <input type="hidden" name="_holdDep" value="{{ transaction.depense }}">

        <button class="btn waves-effect waves-light indigo" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}