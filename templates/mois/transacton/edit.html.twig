{% extends 'base.html.twig' %}

{% block title %}Modification d'une transaction{% endblock %}

{% block body %}
    <div class="section mt-4">
        <div class="section-heading flex-justify-content">
            <h2 class="title">Modification</h2>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <div class="stat-box">
                    {% form_theme form 'bootstrap_5_layout.html.twig' %}
                    <div class="row">
                        {{ form_start(form) }}

                        {{ form_row(form.nom) }}

                        {{ form_row(form.valeur) }}

                        <div class="form-group basic">
                            {{ form_row(form.logo) }}
                        </div>

                        <div class="mb-3 mt-3">
                            {{ form_row(form.depense) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.surcompte) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.recurrent) }}
                        </div>

                        {{ form_row(form._token) }}

                        <input type="hidden" name="_holdValue" value="{{ transaction.valeur }}">
                        <input type="hidden" name="_holdDep" value="{{ transaction.depense }}">

                        {{ form_end(form) }}
                        <form method="post" action="{{ path('mois#delTransaction', {id: transaction.id}) }}" onsubmit="return confirm('ÃŠtes vous vraiment sur ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
                            <button class="btn btn-danger btn-block btn-lg btn">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}